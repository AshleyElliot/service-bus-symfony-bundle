<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="prooph_service_bus.command_bus_router.class">Prooph\ServiceBus\Plugin\Router\CommandRouter</parameter>
        <parameter key="prooph_service_bus.command_bus.class">Prooph\Bundle\ServiceBus\CommandBus</parameter>
    </parameters>

    <services>
        <service id="prooph_service_bus.command_bus" class="%prooph_service_bus.command_bus.class%" abstract="true" />
        <service id="prooph_service_bus.command_bus_router" class="%prooph_service_bus.command_bus_router.class%" public="false" abstract="true" />

        <service id="prooph_service_bus.command_bus.plugin.datacollector_plugin" class="Prooph\Bundle\ServiceBus\Plugin\DataCollectorPlugin">
            <argument id="service_container" type="service"/>
            <argument>command</argument>
            <tag name="prooph_service_bus.command_bus.plugin" />
            <tag name="data_collector" id="prooph.command_bus" template="ProophServiceBusBundle:Collector:debug_view.html.twig"/>
        </service>

    </services>
</container>
